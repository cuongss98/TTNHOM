
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="bread-crumb">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 no-padding">
                <ul class="breadcrumbs">
                    <li class="home">
                        <a  href="@Url.Action("Index", "Home")">Trang chủ</a>
                        <span> / </span>
                    </li>
                    <li><strong itemprop="title">Giỏ hàng</strong></li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="page-content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 no-padding">
                <div class="page-title category-title">
                    <h1 class="title-head"><a href="#">Giỏ hàng của bạn</a></h1>
                </div>
                <div class="content-page">

                    <div class="container_table">
                        <table class="table table-hover table-condensed">
                            <thead>
                                <tr class="tr tr_first">
                                    <th>Hình ảnh</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Mã sản phẩm</th>
                                    <th>Giá</th>
                                    <th style="width:100px;">Số lượng</th>
                                    <th>Thành tiền</th>
                                    <th style="width:50px; text-align:center;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <form action="" method="post">

                                    <tr class="tr" style="height: 100%;">
                                        <td data-th="Hình ảnh">
                                            <div class="col_table_image col_table_hidden-xs"><img src="~/data/upload/laptop01.jpg" alt="Laptop Asus S1300i" class="img-responsive" /></div>
                                        </td>
                                        <td data-th="Sản phẩm">
                                            <div class="col_table_name">
                                                <a href="@Url.Action("ChiTietSanPham", "Home")"><h4 class="nomargin">Laptop Asus S1300i</a></h4>
                                            </div>
                                        </td>
                                        <td data-th="Mã sản phẩm">
                                            <div class="col_table_name">
                                                <h4 class="nomargin">ASUS001</h4>
                                            </div>
                                        </td>
                                        <td data-th="Giá"><span class="color_red font_money">13500000 đ</span></td>
                                        <td data-th="Số lượng"> 
                                                <div class="center">
                                                    <input name="qty[56]" type="number" class="inputsoluong" value="1" min='1' max='100'>
                                                </div>
                                        </td>
                                        <td data-th="Thành tiền" class="text_center"><span class="color_red font_money">13,500,000 đ</span></td>
                                        <td class="actions aligncenter" data-th="">
                                            <a href="gio-hang/0-56/"
                                               onclick="return confirm('Bạn có chắc chắn muốn bỏ sản phẩm này không?')"
                                               class="btn_df btn_table_td_rf_del btn-sm" role="button" style="text-decoration: none;">
                                                X
                                            </a>
                                        </td>
                                    </tr>

                                </form>
                                <tr>
                                    <td colspan="7" class="textright_text">
                                        <div class="sum_price_all">
                                            <span class="text_price">Tổng tiền thành toán</span>:
                                            <span class="text_price color_red">13,500,000 đ</span>
                                        </div>
                                    </td>

                                </tr>
                            </tbody>
                            <tfoot>
                                <tr class="tr_last">
                                    <td colspan="7">
                                        <a href="@Url.Action("Index", "Home")" class="btn_df btn_table floatleft"> Tiếp tục mua hàng</a>

                                        <div class="clear"></div>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="page-login">
                        <div id="login">
                            <h3 class="title-head"><a href="#">Thông tin đơn hàng</a></h3>
                            <span>Bạn hãy điền nội dung tin nhắn vào form dưới đây và gửi cho chúng tôi. Chúng tôi sẽ trả lời bạn sau khi nhận được.</span>
                            <form accept-charset="UTF-8" name="FormGioHang" action="gio-hang" id="contact" method="post">
                                <input name='FormType' type='hidden' value='contact' />
                                <input name='utf8' type='hidden' value='true' />
                                <div class="form-signup clearfix">
                                    <div class="row">
                                        <div class="col-lg-4 col-md-6">
                                            <fieldset class="form-group">
                                                <label>Họ tên: </label>
                                                <input type="text" name="txtHoTen" id="name" class="form-control  form-control-lg" required="">
                                            </fieldset>
                                        </div>
                                        <div class="col-lg-4 col-md-6">
                                            <fieldset class="form-group">
                                                <label>Địa chỉ: </label>
                                                <input type="text" name="txtDiaChi" id="name" class="form-control  form-control-lg" required="">
                                            </fieldset>
                                        </div>
                                        <div class="col-lg-4 col-md-6">
                                            <fieldset class="form-group">
                                                <label>Điện thoại: </label>
                                                <input type="text" name="txtDienThoai" id="name" class="form-control  form-control-lg" required="">
                                            </fieldset>
                                        </div>
                                        <div class="col-lg-4 col-md-6">
                                            <fieldset class="form-group">
                                                <label>Email: </label>
                                                <input type="email" name="txtEmail" id="email" class="form-control form-control-lg" required onchange="return KiemTraEmail(this);">
                                            </fieldset>
                                        </div>
                                        <div class="col-lg-12 col-md-12">
                                            <fieldset class="form-group">
                                                <label>Ghi chú đơn hàng: </label>
                                                <textarea name="txtNoiDung" id="comment" class="form-control form-control-lg" rows="5" required=""></textarea>
                                            </fieldset>
                                        </div>
                                        <div class="col-lg-12 col-md-12">
                                            <div class="pull-xs-left" style="margin-top:10px;margin-bottom: 20px;">
                                                <button tyle="summit" class="btn btn-lg btn-style btn-style-active">Xác nhận</button>
                                                <a class="btn btn-lg btn-style btn-style-active btn-dark" href="http://localhost:59579/" role="button">Hủy</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
